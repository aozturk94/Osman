@model CategoryModel
<h5 class="display-4">Edit Category</h5>
<hr />
<form asp-controller="Category" asp-action="EditCategory" method="post">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-8">

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">User Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryName" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">First Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryDescription" class="form-control" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <input type="hidden" name="categoryId" value="@Model.CategoryId" />
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</form>
