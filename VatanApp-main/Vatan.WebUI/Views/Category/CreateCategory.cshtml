@model CategoryModel

<h5 class="display-4">Add Category</h5>
<hr />
<form asp-controller="Category" asp-action="CreateCategory" method="post">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-8">

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Category Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryName" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Category Description:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="CategoryDescription" class="form-control" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </div>
        </div>
    </div>
</form>
